@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @* Categories *@
    <div class="d-flex justify-content-center">
        <a asp-action="Index" class="btn btn-success mx-2">Всі категорії</a>
        @foreach (var category in Model.Categories)
        {
            <a asp-action="Index" asp-route-category="@category.Name" class="btn btn-success mx-2">@category.Name</a>
        }
    </div>

    @* Products *@
    <div class="row">
        <div class="container mt-5">
            <div class="row">
                @foreach (var product in Model.ProductList.Products)
                {
                    <partial name="_ProductCard" model="@product"></partial>
                }
            </div>
        </div>
    </div>

    <div class="mt-2 d-flex justify-content-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                @if(Model.ProductList.Pagination.Page > 1)
                {
                    <li class="page-item">
                        @if (Model.CategoryName != null)
                        {
                            <a class="page-link" asp-action="Index" asp-route-category="@Model.CategoryName" asp-route-page="@(Model.ProductList.Pagination.Page - 1)">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        }
                        else
                        {
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.ProductList.Pagination.Page - 1)">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        }
                    </li>
                }
                @for(int i = 1; i <= Model.ProductList.Pagination.PageCount;i++)
                {
                    <li class="page-item">
                        @if(Model.CategoryName != null)
                        {
                            <a class="page-link @(Model.ProductList.Pagination.Page == i ? "active" : "")" asp-action="Index" asp-route-category="@Model.CategoryName" asp-route-page="@i">@i</a>
                        }
                        else
                        {
                            <a class="page-link @(Model.ProductList.Pagination.Page == i ? "active" : "")" asp-action="Index" asp-route-page="@i">@i</a>
                        }
                    </li>
                }
                @if (Model.ProductList.Pagination.Page < Model.ProductList.Pagination.PageCount)
                {
                    <li class="page-item">
                        @if (Model.CategoryName != null)
                        {
                            <a class="page-link" asp-action="Index" asp-route-category="@Model.CategoryName" asp-route-page="@(Model.ProductList.Pagination.Page + 1)">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        }
                        else
                        {
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.ProductList.Pagination.Page + 1)">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        }
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>