@model HomeVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @* Categories *@
    <div class="d-flex justify-content-center">
        <a asp-action="Index" class="btn btn-success mx-2">Всі категорії</a>
        @foreach(var category in Model.Categories)
        {
            <a asp-action="Index" asp-route-category="@category.Name" class="btn btn-success mx-2">@category.Name</a>
        }
    </div>

    @* Products *@
    <div class="row">
        <div class="container mt-5">
            <div class="row">
                @foreach (var product in Model.Products)
                {
                    <div class="card m-2 p-2" style="width: 18rem;">
                        <img src="~/images/@product.Image" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text fw-bold" style="font-size: 1.5em;">@product.Price грн</p>
                            <a href="#" class="btn btn-primary">Додати у кошик</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>