@model IEnumerable<Product>
@{
    ViewData["Title"] = "Товари";
}

@if (Model.Count() > 0)
{
    <div class="d-flex">
        <h1 class="text-center">Список товарів</h1>
        <div class="text-end flex-grow-1">
            <a asp-action="Create" class="btn btn-dark">Додати товар</a>
        </div>
    </div>
}
else
{
    <h2 class="text-center">Товари не знайдено</h2>
}